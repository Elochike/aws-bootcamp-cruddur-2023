if [ -z "$1" ]; then
  echo "no table name argument supplied"
  exit 1$

TABLE_NAME ="$1"

  ENDPOINT_URL="--endpoint-url=http://localhost:8000"
fi
k
if [ "$2" = "prod" ]; then
